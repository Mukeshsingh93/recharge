<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/existcustomer"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginStart="@dimen/twoenty"
            android:layout_marginTop="@dimen/twoenty"
            android:layout_marginEnd="@dimen/twoenty"
            android:background="@drawable/gradient">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:fontFamily="@font/popreg"
                android:text="@string/existingcustomer"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_sixteen" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/newcustomer"
            android:layout_width="match_parent"
            android:background="@drawable/gradient"
            android:layout_marginStart="@dimen/twoenty"
            android:layout_marginEnd="@dimen/twoenty"
            android:layout_marginTop="@dimen/twoenty"
            android:layout_height="?actionBarSize"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/newcustomer"
                android:layout_centerInParent="true"
                android:fontFamily="@font/popreg"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_sixteen"/>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
</layout>